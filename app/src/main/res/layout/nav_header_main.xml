<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:textDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:background="@drawable/background"
    android:gravity="bottom"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"

        android:src="@drawable/man" />

    <Button

        android:id="@+id/nav_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/user_icon"
        android:background="@drawable/white_border"
        android:fontFamily="@font/iransansmobile"
        android:padding="10dp"
        android:text="@string/login_and_register"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"

        />

    <RelativeLayout
        android:id="@+id/nav_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/user_icon"
        android:visibility="gone">

        <TextView

            android:id="@+id/nav_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="10dp"

            android:fontFamily="@font/iransansmobile"
            android:padding="5dp"
            android:text="alireza heidari"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/nav_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_fullname"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="10dp"


            android:fontFamily="@font/iransansmobile"
            android:text="09121234554"
            android:textColor="@color/colorLightGray"

            android:textSize="12sp" />

        <ImageView
            android:id="@+id/nav_logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"


            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/logout" />
    </RelativeLayout>

    <!--<View-->

        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#fdfdfd" />-->

</RelativeLayout>
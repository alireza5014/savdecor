<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".Fragment.NewRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"

        android:orientation="vertical">


        <EditText
            android:id="@+id/message"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/iransansmobile"
            android:hint="متن نظر"
            android:lines="4"
            android:minLines="4"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorGray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/insert_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight=".8"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/iransansmobile"
                android:text="ارسال نظر"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cancel_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight=".2"
                android:background="@color/colorLightGreen"
                android:fontFamily="@font/iransansmobile"
                android:text="بازگشت"
                android:textColor="@color/colorblack"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/request_btn_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"


        android:elevation="4dp"
        android:visibility="gone" />


</FrameLayout>